<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_notification"
    android:layout_marginBottom="7dp"
    >

    <ImageView
        android:id="@+id/noti_user_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_centerVertical="true"
        android:src="@android:drawable/ic_dialog_email" />

    <TextView
        android:id="@+id/noti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:textSize="14sp"
        android:layout_toEndOf="@+id/noti_user_img"
        android:text="edetebenezer made a transfer to poloniex"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noti_title"
        android:layout_marginTop="10dp"
        android:id="@+id/noti_details"
        android:layout_marginLeft="5dp"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/noti_user_img"
        android:textColor="@color/white"
        android:text="This will hold the details of the notification received from the server"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="45m"
        android:layout_marginRight="7dp"
        android:textColor="@color/ash_anoda1"
        android:textSize="13sp"
        />

</RelativeLayout>